{
  "manifest_version": 3,
  "name": "Chrome Startoid",
  "version": "1.0.0",
  "description": "Кастомная стартовая страница для Chrome",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "storage",
    "topSites",
    "identity",
    "identity.email"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/*",
        "assets/*",
        "*.js",
        "*.css",
        "quick-links.json"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}